<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_main_tab_bottom"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp" >

        <LinearLayout
            android:id="@+id/id_tab_bottom_01"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_tab_bottom_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    			android:textSize="17dp"
                android:text="权威发布" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab_bottom_02"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_tab_bottom_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    			android:textSize="17dp"
                android:text="教育资源" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab_bottom_03"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/tv_tab_bottom_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    			android:textSize="17dp"
                android:text="教学质量" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_tab_bottom_04"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/tv_tab_bottom_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    			android:textSize="17dp"
                android:text="···更多" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>